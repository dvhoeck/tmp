@{
    ViewBag.Title = "Printer setup";
}

<script src="~/Scripts/expansionPanel.directive.js"></script>
<script src="~/Scripts/expansionPanel.service.js"></script>

<style>
    html, body, md-content{
        background-color: #fff;
    }

    .underSideBorder{
        border-bottom: 1px solid #9e9e9e;
    }

    svg{
        margin-top: -3px;
    }

    .helpItemContent{
        height: 200px; 
        width: 100%; 
        margin: 0px; 
        padding: 30px;
    }

    .fixedHeightNoPadding{
        height: 200px; 
        padding: 0px;
    }
</style>

<div ng-controller="RemarkCtrl" ng-app="GTS" ng-init="hideTitleBar();setContentWidth(100);" flex style="padding: 0px; margin: 0px; width: 100%;">
    <md-button class="md-icon-button" ng-mouseenter="showHelp = true" ng-mouseleave="showHelp = false" style="position: absolute; top: 0px; right: 0px; z-index: 99;">
        <i class="fas fa-info-circle" md-colors="{color: 'accent'}"></i>
        <md-tooltip>Hit CTRL + P if your print doesn't start automatically.</md-tooltip>
    </md-button>
    <md-toolbar layout-padding style="width: 100%;" class="md-warn">
        <div class="md-display-3">SETUP INSTRUCTIONS</div>
    </md-toolbar>
    <div layout-padding>
        <md-card layout="row" class="fixedHeightNoPadding">
            <div md-colors="{background: 'accent'}" flex="30" layout="row" layout-align="center center">
                <i class="fas fa-download fa-4x" md-colors="{color: 'grey-50'}"></i>
            </div>
            <div layout="column" layout-align="center center">
                <div class="helpItemContent underSideBorder" style="height: 130px;"  layout="column">
                    <span class="md-subhead" layout-padding>Download</span>
                    <span class="md-caption" layout-padding>Download label printer driver for the dymo printer</span>
                </div>

                <div flex layout="row" layout-padding layout-align="center center">
                    <a ng-href="http://www.dymo.com/en-US/dymo-user-guides" target="_blank" class="md-accent">http://www.dymo.com/en-US/dymo-user-guides &nbsp;<i class="fas fa-external-link-alt" md-colors="{color: 'accent'}"></i></a>
                </div>
            </div>
        </md-card>
        <br />
        <md-card layout="row" class="fixedHeightNoPadding">
            <div md-colors="{background: 'accent'}" flex="30" layout="row" layout-align="center center">
                <i class="fas fa-microchip fa-4x" md-colors="{color: 'grey-50'}"></i>
            </div>
            <div layout="column" layout-align="center center" style="width: 70%;">
                <div class="helpItemContent" layout="column">
                    <span class="md-subhead" layout-padding>Install</span>
                    <span class="md-caption" layout-padding>Install the software downloaded in the previous step. After the install, you'll have two printers. One for adhesive labels, another for regular dymo prints (narrow tape strip).</span>
                </div>
            </div>
        </md-card>
        <br />
        <md-card layout="row" class="fixedHeightNoPadding">
            <div md-colors="{background: 'accent'}" flex="30" layout="row" layout-align="center center">
                <i class="fas fa-print fa-4x" md-colors="{color: 'grey-50'}"></i>
            </div>
            <div layout="column" layout-align="center center" style="width: 70%;">
                <div class="helpItemContent" layout="column">
                    <span class="md-subhead" layout-padding>Print</span>
                    <span class="md-caption" layout-padding>Choose one of your many options to start the actual printing. The easiest would be hitting CTRL+P</span>
                </div>
            </div>
        </md-card>
        <br />
        <md-card layout="row" class="fixedHeightNoPadding">
            <div md-colors="{background: 'accent'}" flex="30" layout="row" layout-align="center center">
                <i class="fas fa-file fa-4x" md-colors="{color: 'grey-50'}"></i>
            </div>
            <div layout="column" layout-align="center center" style="width: 70%;">
                <div class="helpItemContent" layout="column">
                    <span class="md-subhead" layout-padding>Select paper stock</span>
                    <span class="md-caption" layout-padding>
                        When opening the print dialog for the first time:<ul>
                            <li>select<b> DYMO LabelWriter DUO Label</b> printer</li>
                            <li>select paper stock <b>99014 Shipping</b></li>
                            <li>set orientation to <b>landscape</b> and set margins to <b>minimal</b></li>
                        </ul>
                    </span>
                </div>
            </div>
        </md-card>
    </div>
</div>

<script src="~/Scripts/Views/RemarkScripts.js?@DateTime.Now.Ticks.ToString()"></script>

